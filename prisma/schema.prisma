generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Waitlist {
  id     Int      @id @default(autoincrement())
  name   String
  active Boolean? @default(false)
  Signup Signup[]
}

model Signup {
  id         Int      @id @default(autoincrement())
  email      String
  name       String?
  waitlist   Waitlist @relation(fields: [waitlistId], references: [id])
  waitlistId Int
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String
  password String
}
